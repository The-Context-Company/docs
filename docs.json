{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "The Context Company",
  "colors": {
    "primary": {
      "gradient": {
        "from": "#197ef7",
        "to": "#9333ea"
      }
    },
    "light": {
      "gradient": {
        "from": "#197ef7",
        "to": "#9333ea"
      }
    },
    "dark": {
      "gradient": {
        "from": "#197ef7",
        "to": "#9333ea"
      }
    }
  },
  "appearance": {
    "default": "light"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "groups": [
      {
        "group": "Getting started",
        "pages": ["index", "concepts", "environments", "contact"]
      },
      {
        "group": "Supported frameworks",
        "pages": [
          {
            "group": "Vercel AI SDK",
            "pages": [
              "frameworks/ai-sdk/setup",
              "frameworks/ai-sdk/usage",
              "frameworks/ai-sdk/local"
            ]
          },
          {
            "group": "Claude Agent SDK",
            "pages": [
              "frameworks/claude-agent-sdk/setup",
              "frameworks/claude-agent-sdk/usage"
            ]
          },
          "frameworks/langchain",
          "frameworks/langgraph"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://thecontext.company/runs"
    }
  },
  "contextual": {
    "options": ["copy", "chatgpt", "claude", "cursor"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/thecontextco",
      "linkedin": "https://www.linkedin.com/company/the-context-company",
      "github": "https://github.com/The-Context-Company"
    }
  },
  "fonts": {
